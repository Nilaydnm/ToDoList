@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 100px auto; /* ortalama ve dikey boşluk */
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        background-color: #fff;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-login {
        width: 100%;
    }

    .register-link {
        text-align: center;
        margin-top: 15px;
    }
</style>

<div class="login-container">
    <h2>Giriş Yap</h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label>Kullanıcı Adı:</label>
            <input name="username" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Şifre:</label>
            <input name="password" type="password" class="form-control" required />
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-login">Giriş Yap</button>
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <p style="color:red; text-align:center; margin-top:10px;">@ViewBag.Message</p>
    }

    <div class="register-link">
        <p>Hesabın yok mu? <a href="/Account/Register">Kayıt ol</a></p>
    </div>
</div>
